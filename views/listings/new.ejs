<% layout('/layouts/commen.ejs') %>
<body>
    <h1>Create new listing </h1>
    <form method="post" action="/listings" class="needs-validation" novalidate>
    <div class="row mt-3">


        <div  class="col-8 offset-2">

            <div class="mb-3">
                <label for="Title" class="form-label">Title</label>
                <input class="form-control" type="text" name="listing[title]" placeholder="Enter Title" required>
                <div class="valid-feedback">
                    Enter Title
                  </div>
                
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea class="form-control" name="listing[description]" type="text" placeholder="Enter Description" required></textarea>
                <div class="valid-feedback">
                    Enter sort Description
                  </div>
            </div>
            <div class="mb-3">
                <label for="Image" class="form-label">Image</label>
                <input class="form-control" type="text" name="listing[image]" placeholder="Enter Url/link">
            </div>
        <div class="row">

            <div class="mb-3 col-4">
                <label for="price" class="form-label" >price</label>
                <input class="form-control" name="listing[price]" type="nu" placeholder="7000" required>
                <div class="invalid-feedback">
                    Please Enter valid price
                  </div>
            </div>
    
            <div class="mb-3 col-4">
                <label for="Country" class="form-label">Country</label>
                <input type="text" class="form-control" name="listing[country]" placeholder="India" required>
                <div class="invalid-feedback">
                    Please Enter valid  country
                </div>
                
            </div>
        </div>    

            <div class="mb-3">
                <label for="Location" class="form-label">Location</label> <br>
                <input  class="form-control" type="text" name="listing[location]" placeholder="Jaipur ,Rajasthan" required>
                <div class="invalid-feedback">
                    Please Enter valid Location
                </div>
           
            </div>       
              
                <button class="edit-btn mt-3"> new</button>
     
        </div>
    </div>
    </form>
</body>
