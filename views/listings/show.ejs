<% layout('/layouts/commen.ejs') %>
<body>
    <div class="row offset-3 mt-3">
        <h2><%= list.title %></h2>
    </div>

    <div class="col-6 offset-3">
        <div class="card">
            <img src="<%= list.image.url%>" class="card-img-top" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <i><%= list.owner %></i><br>
                    <%= list.description %><br>
                    &#8377;<%= list.price %><br>
                    <%= list.location %><br>
                    <%= list.country %><br>
                </p>
            </div>
        </div>
    </div>

<% if(curentUser && curentUser._id . equals(list.owner._id)) { %>
    <div class="btns offset-3 mb-5 mt-3">
        <form method="get" action="/listings/<%= list._id %>/edit">
            <button class="btn">Edit listing</button>
        </form>
        <form class="btn-delete offset-1" method="post" action="/listings/<%= list._id %>?_method=delete">
            <button class="edit-btn">Delete listing</button>
        </form>
    </div>
<% } %>

    <hr>
    <div class="offset-3 col-8">
        <b><h4>Leave a Review</h4></b>
        <form id="reviewForm" method="post" action="/listings/<%= list._id %>/review" class="needs-validation" novalidate>
            <!-- Rating input -->
            <div class="mt-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" class="form-range" min="1" max="5" id="rating" name="review[Rating]" required>
            </div>

            

            
            <!-- Comment input -->
            <div class="mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea type="text" rows="6" cols="12" id="comment" name="review[Comment]" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Please add a comment
                </div>
            </div>

            <button type="submit" class="btn btn-outline mt-3 mb-3">Submit</button>
        </form>

        <hr>
        <h3>All Reviews</h3>


   
        
        <div class="row">
            <% for(review of list.Reviews) { %>
                <div class="cards col-5 mt-3 ms-2 mb-3">
                    <div class="card-body">
                        <h6>bob</h6>
                        <%= review.Comment %>, 
                        <%= review.Rating %> Stars
                        <p class="starability-result" data-rating="3">Rated: 3 stars
                        </p>                        
                        <form class="mt-3" method="post" action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=delete">
                            <button class="btn btn-outline">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
            <div class="mb-3">
                <div id="map">
                    <h3>Where you 'll be</h3>
                        <script>
                        let Map_Token = "<%= process.env.MAP_TOKEN %>";
                        mapboxgl.accessToken = Map_Token ;
                        const map = new mapboxgl.Map({
                            container: 'map', // container ID
                            center: [77.1 ,  28.7], // starting position [lng, lat]. Note that lat must be set between -90 and 90
                            zoom: 9 // starting zoom
                        });
                    </script>
            </div>
    </div>
</body>

