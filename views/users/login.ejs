<% layout('/layouts/commen.ejs') %>
<body>
    <h2  class="col-4 offset-3 mt-3"> Login Form </h2>

    <div class="row mt-2 col-4 offset-3"  >
        <form method="post" action="/login"  class="needs-validation" novalidate>
            <div class="mb-2 mt-2">
                <label for="username" class="form-label">Username</label>
                <input class="form-control" type="text" name="username" id="username" class="username" required>
            </div>

            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input class="form-control" type="password" name="password" id="password" class="password" required>
            </div>
            
            <button class="btn-success mt-4 col-2 offset-1">Login </button>
            
        </form>
    </div>
 
   
</body> 
